{
  "name": "Asta",
  "author": "Allen Institute for AI",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Detects papers as you browse and lets you chat with AI about themâ€”grounded in the actual content, powered by Asta from Ai2",
  "icons": {
    "16": "images/icons/16.png",
    "32": "images/icons/32.png",
    "48": "images/icons/48.png",
    "128": "images/icons/128.png"
  },
  "action": {
    "default_title": "Ask AI about a paper",
    "default_icon": {
      "16": "images/icons/16.png",
      "32": "images/icons/32.png",
      "48": "images/icons/48.png",
      "128": "images/icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "index.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "host_permissions": [
    "https://api.semanticscholar.org/*",
    "https://asta-tools.allen.ai/*"
  ]
}
